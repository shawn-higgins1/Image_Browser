<% provide(:title, t("reset_password.edit.title")) %>
<h1><%= t("reset_password.edit.header") %></h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with url: forgot_password_path, method: :post do |f| %>
            <div class="form-group">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: 'form-control', required: true %>
            </div>
            <%= f.submit t("reset_password.edit.submit"), class: "btn btn-primary mt-2" %>
        <% end %>
    </div>
</div>
