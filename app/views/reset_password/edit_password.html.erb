<% provide(:title, t("reset_password.edit.title")) %>
<h1><%= t("reset_password.edit.header") %></h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for :user, url: reset_password_path(@token, @user) do |f| %>
            <div class="form-group">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, class: 'form-control', required: true %>

                <%= f.label :password_confirmation, t("reset_password.edit.password_confirmation"), class: "form-label" %>
                <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
            </div>
            <%= f.submit t("reset_password.edit.submit"), class: "btn btn-primary mt-2" %>
        <% end %>
    </div>
</div>
