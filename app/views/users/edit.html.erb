<% provide(:title, 'User Profile') %>
<h1>Edit your User Profile</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, url: users_path(id: @user.id), method: :patch do |f| %>
            <div class="form-group">
                <%= f.label :username, class: "form-label" %>
                <%= f.text_field :username, class: 'form-control', required: true %>

                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: 'form-control', readonly: true %>
            </div>
            <%= f.submit "Update my Profile", class: "btn btn-primary mt-2" %>
        <% end %>

        <p>Click <%= link_to "here", forgot_password_path(id: @user.id), method: :post %> to reset your password </p>

        <%= link_to "Delete all your uploaded files", delete_photos_path(ids: @user.photos.pluck(:id)), id: "delete-selected", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure? This action can't be undone."} %>
    </div>
</div>