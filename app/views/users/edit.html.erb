<% provide(:title, t("user.profile.title")) %>
<h1><%= t("user.profile.header") %></h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, url: users_path(id: @user.id), method: :patch do |f| %>
            <div class="form-group">
                <%= f.label :username, class: "form-label" %>
                <%= f.text_field :username, class: 'form-control', required: true %>

                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: 'form-control', readonly: true %>
            </div>
            <%= f.submit t("user.profile.submit"), class: "btn btn-primary mt-2" %>
        <% end %>

        <p><%= t("user.profile.forgot_start") %> <%= link_to t("sigiin.here"), forgot_password_path(id: @user.id), method: :post %> <%= t("user.profile.forgot_end") %> </p>

        <%= link_to t("user.profile.delete"), delete_photos_path(ids: @user.photos.pluck(:id)), id: "delete-selected", method: :delete, class: "btn btn-danger", data: {confirm: t("gallery.confirm_delete")} %>
    </div>
</div>